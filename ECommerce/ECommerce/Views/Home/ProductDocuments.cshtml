<div class="side-app">

    <div class="main-container container-fluid">
        <div class="page-header">
            <div>
                <h1 class="page-title">Product Documents</h1>

            </div>
            <div class="ms-auto pageheader-btn">

                <a href="/AddSellerDocument/@ViewBag.sellername" class="btn btn-secondary btn-icon text-white">
                    <span>
                        <i class="fe fe-plus"></i>
                    </span> Add Document
                </a>
            </div>
        </div>
        <div class="row row-sm" style="margin-top:20px;">
            <div class="col-lg-12">
                <div class="card  overflow-hidden">
                    <div class="card-header">
                        <h3 class="card-title">Keep all your shopping essentials in one place</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="file-datatable" class="table table-bordered text-nowrap key-buttons border-bottom">
                                <thead>
                                    <tr>
                                        <th class="border-bottom-0">Bill Name/Number </th>
                                        <th class="border-bottom-0">GSTNumber</th>
                                        <th class="border-bottom-0">Total Quantity</th>

                                        <th class="border-bottom-0">Total Price</th>
                                        <th class="border-bottom-0">Mode Of Payment</th>
                                        <th class="border-bottom-0">Created date</th>
                                        <th class="border-bottom-0">Bill Image</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.Document != null)
                                    {
                                        foreach (var items in ViewBag.Document)
                                        {
                                            <tr>
                                                <td>@(items.BName)</td>
                                                <td>@(items.GSTNumber)</td>
                                                <td>@items.TotalQuantity</td>

                                                <td>@items.TotalPrice</td>
                                                <td>@items.ModeOfPayment</td>
                                                <td>@items.CreatedDate</td>
                                                <td><img src="@items.Image" style="width:fit-content; height:80px;" class="popup-img" /></td>

                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <!-- CONTAINER CLOSED -->
</div>
