
@{
    ViewBag.Title = "ProductInventory";
}
@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
@section Page_Level_Css{
    <style>
 /*       table {
            margin: 11px 0;
            width: 100%;
        }

        th, td {
            padding: 0px 8px;
            border: 1px solid #000;
            text-align: center;
        }*/
        .dt-buttons.btn-group {
            margin-left: 20px;        
        }
    </style>
}
<div class="side-app">

    <!-- CONTAINER -->
    <div class="main-container container-fluid">
            <div class="row row-sm" style="margin-top:20px;">
                        <div class="col-lg-12">
                            <div class="card  overflow-hidden">
                                <div class="card-header">
                                    <h3 class="card-title">Products & Apply Offers</h3>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table id="file-datatable" class="table table-bordered text-nowrap key-buttons border-bottom">
                                            <thead>
                                                <tr>
                                                    <th class="border-bottom-0">Product Name</th>
                                                    <th class="border-bottom-0">Model Name</th>
                                                    <th class="border-bottom-0">Quantity</th>
                                                    <th class="border-bottom-0">Dimension</th>
                                                    <th class="border-bottom-0">Category</th>
                                                    <th class="border-bottom-0">Created date</th>
                                                    <th class="border-bottom-0">View Details</th>
                                                    <th class="border-bottom-0">Apply Offer</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (ViewBag.Inventory != null)
                                                {
                                                    foreach (var items in ViewBag.Inventory)
                                                    {
                                                        <tr>
                                                            <td>@(items.PName.Length > 45 ? items.PName.Substring(0, 45) : items.PName)</td>
                                                            <td>@(items.ModelName.Length > 16 ? items.PName.Substring(0, 16) : items.ModelName)</td>
                                                            <td>@items.Quantity</td>
                                                            <td>@items.Dimension</td>
                                                            @*<td>@(items.SubCategory.Length > 10 ? items.PName.Substring(0, 10) : items.SubCategory)</td>*@
                                                        <td>
                                                            @(
                                                                 items.SubCategory.Length > 10
                                                                 ? $"{items.PName} ({items.SubCategory.Substring(0, 10)}...)"
                                                                 : items.SubCategory
                                                             )
                                                        </td>
                                                            <td>@items.CreatedDate</td>
                                                            <td>
                                                                <a class="btn btn-primary" href="/ProductView/@items.PID">View Details</a>
                                                            </td>
                                                            <td>
                                                                <a class="btn btn-primary" href="/Offer/@ViewBag.sellername/@items.PID/@items.PIID">Apply Offer</a>
                                                            </td>
                                                        </tr>    
                                                    }
                                                 }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


    </div>
    <!-- CONTAINER CLOSED -->
</div>

